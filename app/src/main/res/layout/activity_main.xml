<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_title" />

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/c_f5f5f5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x114"
        android:layout_alignParentBottom="true"
        android:background="@color/bottom"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tab_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="vertical">

            <!--<ImageView-->
            <!--android:id="@+id/tab_home_imageview"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:contentDescription="@string/app_name"-->
            <!--android:src="@mipmap/home" />-->

            <TextView
                android:id="@+id/tab_home_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x8"
                android:text="首页"
                android:textColor="@color/white"
                android:textSize="@dimen/x24" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/tab_rongtong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="vertical">

            <!--<ImageView-->
            <!--android:id="@+id/tab_rongtong_imageview"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:contentDescription="@string/app_name"-->
            <!--android:src="@mipmap/rongtong" />-->

            <TextView
                android:id="@+id/tab_rongtong_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x8"
                android:text="账款融通"
                android:textColor="@color/white"
                android:textSize="@dimen/x24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="vertical">

            <!--<ImageView-->
            <!--android:id="@+id/tab_user_imageview"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:contentDescription="@string/app_name"-->
            <!--android:src="@mipmap/account" />-->

            <TextView
                android:id="@+id/tab_user_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x8"
                android:text="账户中心"
                android:textColor="@color/white"
                android:textSize="@dimen/x24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="vertical">

            <!--<ImageView-->
            <!--android:id="@+id/tab_more_imageview"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:contentDescription="@string/app_name"-->
            <!--android:src="@mipmap/more" />-->

            <TextView
                android:id="@+id/tab_more_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x8"
                android:text="更多"
                android:textColor="@color/white"
                android:textSize="@dimen/x24" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

