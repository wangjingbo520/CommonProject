<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/titlebar_common_back" />

    <ImageView
        android:layout_width="@dimen/x400"
        android:layout_height="@dimen/x97"
        android:layout_marginBottom="@dimen/x160"
        android:layout_marginTop="@dimen/x80"
        android:src="@mipmap/icon_logo" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x55"
        android:paddingRight="@dimen/x55">

        <ImageView
            android:layout_width="@dimen/x22"
            android:layout_height="@dimen/x32"
            android:background="@mipmap/icon_phone" />

        <EditText
            android:id="@+id/etAccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x27"
            android:background="@null"
            android:hint="手机号"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="@color/color_e6e6e6"
            android:textColorHint="@color/color_e6e6e6"
            android:textSize="@dimen/x28" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x53"
        android:paddingRight="@dimen/x55">

        <ImageView
            android:layout_width="@dimen/x27"
            android:layout_height="@dimen/x27"
            android:background="@mipmap/icon_password" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x24"
            android:background="@null"
            android:hint="请设置密码"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/color_e6e6e6"
            android:textColorHint="@color/color_e6e6e6"
            android:textSize="@dimen/x28" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x53"
        android:paddingRight="@dimen/x53">

        <ImageView
            android:layout_width="@dimen/x28"
            android:layout_height="@dimen/x21"
            android:background="@mipmap/icon_yzm" />

        <EditText
            android:id="@+id/etCode"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x24"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入短信验证码"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/color_e6e6e6"
            android:textColorHint="@color/color_e6e6e6"
            android:textSize="@dimen/x28" />

        <ImageView
            android:id="@+id/ivCorrect"
            android:layout_width="@dimen/x28"
            android:layout_height="@dimen/x23"
            android:layout_margin="@dimen/x15"
            android:src="@mipmap/icon_correct"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvGetCode"
            android:layout_width="@dimen/x124"
            android:layout_height="@dimen/x48"
            android:background="@drawable/bg_btn_yzm"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/x20" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:background="@color/color_line" />

    <ImageView
        android:id="@+id/ivRegister"
        android:layout_width="@dimen/x196"
        android:layout_height="@dimen/x196"
        android:layout_marginTop="@dimen/x62"
        android:src="@mipmap/icon_register" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x80"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="@dimen/x34"
            android:layout_height="@dimen/x34"
            android:background="@null"
            android:button="@drawable/checkbox_button"
            android:checked="false"
            android:padding="@dimen/x6" />

        <TextView
            android:id="@+id/tvRules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:text="是否接受《注册协议》"
            android:textColor="@color/color_c4e7e7e7"
            android:textSize="@dimen/x24" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvLoginRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x59"
        android:text="@string/registed"
        android:textColor="@color/color_c4e7e7e7"
        android:textSize="@dimen/x24" />

</LinearLayout>